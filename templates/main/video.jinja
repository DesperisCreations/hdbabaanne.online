{% extends 'base.jinja' %}
{% block title %}{{video.baslik}}{%endblock%}

{% block content %}
<div class="container mx-auto px-4">
    <br>
    <h3 class="flex items-center text-2xl font-extrabold dark:text-white">{{video.baslik}}<span
            class="bg-blue-100 text-blue-800 text-lg font-semibold me-2 px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 ms-2">{{video.kategori.isim}}</span>
            </h3>
    <br>

    <video id="myVideo" class="w-full h-96" controlsList="nodownload" controls>
        <source src="{{video.video_dosyasi.url}}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <br>

    <p class="text-gray-500">{{video.aciklama}}</p>
</div>

<style>
    #myVideo:focus {
        outline: none;
    }

    video::-webkit-media-controls-panel:focus {
        outline: none;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        let video = document.getElementById("myVideo");
        video.controls = true;
    });

    document.addEventListener("keydown", function(event) {
        let video = document.getElementById("myVideo");

        if (event.key === "ArrowRight") {
            video.currentTime += 10;
            return;
        }

         if (event.key === "ArrowLeft") {
            video.currentTime -= 10;
        }
    });
</script>

{% endblock %}